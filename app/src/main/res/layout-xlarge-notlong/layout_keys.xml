<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/k">

        <ImageButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/key"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UK Interest Rates"
            android:id="@+id/ukIR"
            android:background="#0097f4"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UK Imports"
            android:id="@+id/ukIM"
            android:background="#f10f0f"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="US Interest Rates"
            android:id="@+id/usIR"
            android:background="#1ea068"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="US imports"
            android:id="@+id/usIM"
            android:background="#fff703"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Germany Interest Rates"
            android:id="@+id/GerIR"
            android:background="#f5ae0a"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Germany Imports"
            android:id="@+id/GerIM"
            android:background="#ff69b4"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Australia Interest Rates"
            android:id="@+id/AusIR"
            android:background="#d3d3d3"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Australia Imports"
            android:id="@+id/AusIM"
            android:background="#b03060"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India Interest Rates"
            android:id="@+id/IndIR"
            android:background="#802a2a"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India Imports"
            android:id="@+id/IndIM"
            android:background="#551a8b"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="China Interest Rates"
            android:id="@+id/cnIR"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="China Imports"
            android:id="@+id/cnIM"
            android:background="#ffffff"
            android:textSize="18dp" />

    </LinearLayout>



</LinearLayout>
