<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/mainLayout"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topPanel"
        android:weightSum="1">

        <TextView
            android:layout_width="554dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Claim -"
            android:textSize="50dp"
            android:id="@+id/ourClaim"
            android:layout_weight="0.57" />

        <ToggleButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/toggleMusik"
            android:background="@drawable/music_playing"
            android:textOff=""
            android:textOn=""
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/graphPanel"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            >

            <FrameLayout
                android:layout_width="600dp"
                android:layout_height="250dp"
                android:id="@+id/frameLayout"
                ></FrameLayout>

            <LinearLayout
                android:id="@+id/graphOpt"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" highlight "
                    android:background="#8d6e63"
                    android:id="@+id/button" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="5dp"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Labels "
                    android:background="#8d6e63"
                    android:id="@+id/button2" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="5dp"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#8d6e63"
                    android:text=" Square "
                    android:id="@+id/button3" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">


                <LinearLayout
                    android:id="@+id/countries"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/lineLayout"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/country1"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_uk"
                            />
                        <at.markushi.ui.CircleButton
                            android:id="@+id/country2"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_us"
                            />
                        <at.markushi.ui.CircleButton
                            android:id="@+id/country3"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_de"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lineLayout2"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/country4"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_australia"
                            />
                        <at.markushi.ui.CircleButton
                            android:id="@+id/country5"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_india"
                            />
                        <at.markushi.ui.CircleButton
                            android:id="@+id/country6"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_china"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>