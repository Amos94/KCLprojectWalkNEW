<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_walk_mdpi"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/mainLayout"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="349dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:id="@+id/linLayoutLeft"
        android:weightSum="1"
        android:layout_weight="0.73">

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
        <!--android:text="Claim:"-->
        <!--android:id="@+id/textView" />-->

        <LinearLayout
            android:id="@+id/graphOpt"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_weight="1" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" highlight "
                android:background="#f3fffc"
                android:id="@+id/button" />
            <View
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:layout_weight="1" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Labels "
                android:background="#f3fffc"
                android:id="@+id/button2" />
            <View
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:layout_weight="1" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f3fffc"
                android:text=" Square "
                android:id="@+id/button3" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:id="@+id/frameLayout"
            android:layout_weight="0.76">


        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Line Desc:"
            android:id="@+id/textView2" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayout"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentStart="true"></FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="471dp"
        android:layout_height="match_parent"
        android:id="@+id/linLayoutRight">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/ourClaim" />
            android:text="As interest rates edcrease, imports of goods and services rise"
            android:textSize="20dp"
            android:id="@+id/ourClaim"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout">


                <LinearLayout
                    android:id="@+id/countries"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/lineLayout"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/country1"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_uk"
                            />
                        <at.markushi.ui.CircleButton
                            android:id="@+id/country2"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_us"
                            />
                        <at.markushi.ui.CircleButton
                            android:id="@+id/country3"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_de"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lineLayout2"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <at.markushi.ui.CircleButton
                            android:id="@+id/country4"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_australia"
                            />
                        <at.markushi.ui.CircleButton
                            android:id="@+id/country5"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_india"
                            />
                        <at.markushi.ui.CircleButton
                            android:id="@+id/country6"
                            android:layout_width="64dip"
                            android:layout_height="64dip"
                            app:cb_color="#8d6e63"
                            app:cb_pressedRingWidth="8dip"
                            android:layout_gravity="bottom"
                            android:src="@drawable/flag_china"
                            />

                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>

        <ToggleButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/toggleMusik"
            android:background="@drawable/music_playing"
            android:textOff=""
            android:textOn=""
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>

